<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Uikit" />

    <!-- Theme -->
    <style name="Uikit.Theme" />

    <style name="Uikit.Theme.Dhuwit" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorMajor</item>
        <item name="colorPrimaryVariant">@color/colorMajorDark</item>
        <item name="colorOnPrimary">@color/colorOnMajor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorMinor</item>
        <item name="colorSecondaryVariant">@color/colorMinorDark</item>
        <item name="colorOnSecondary">@color/colorOnMinor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Date Picker -->
        <item name="materialCalendarTheme">@style/Uikit.Theme.DatePicker</item>
    </style>

    <style name="Uikit.Theme.Dhuwit.Launcher">
        <item name="android:windowBackground">@drawable/background_launcher_screen</item>
        <item name="colorPrimary">@color/colorMajor</item>
        <item name="colorPrimaryDark">@color/colorMajorDark</item>
        <item name="colorAccent">@color/colorMinor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Uikit.Theme.Dhuwit.Button.Toggle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorMinor</item>
    </style>

    <style name="Uikit.Theme.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/colorMinor</item>
        <item name="colorOnPrimary">@color/colorOnMinor</item>
        <item name="shapeAppearanceSmallComponent">@style/Uikit.Style.DatePicker.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/Uikit.Style.DatePicker.MediumComponent
        </item>
    </style>

    <!-- Text Appearance -->
    <style name="Uikit.Style" />

    <style name="Uikit.Style.TextAppearance" />

    <style name="Uikit.Style.TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">64sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Uikit.Style.TextAppearance.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Input -->
    <style name="Uikit.Style.Input" />

    <style name="Uikit.Style.Input.Layout" />

    <style name="Uikit.Style.Input.Layout.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorMinor</item>
        <item name="hintTextColor">@color/colorMinor</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
        <item name="errorIconTint">@color/colorError</item>
        <item name="errorIconDrawable">@drawable/ic_error_input</item>
        <item name="prefixTextAppearance">@style/Uikit.Style.TextAppearance.Body2</item>
    </style>

    <style name="Uikit.Style.Input.Text">
        <item name="android:textCursorDrawable">@drawable/background_cursor_input_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textAppearance">@style/Uikit.Style.TextAppearance.Body2</item>
    </style>

    <style name="Uikit.Style.Input.Decimal">
        <item name="android:textCursorDrawable">@drawable/background_cursor_input_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">13</item>
        <item name="android:textAppearance">@style/Uikit.Style.TextAppearance.Body2</item>
    </style>

    <!-- Button -->
    <style name="Uikit.Style.Button" />

    <style name="Uikit.Style.Button.Fill">
        <item name="android:background">@drawable/selector_button_fill</item>
        <item name="android:textAppearance">@style/Uikit.Style.TextAppearance.Button</item>
        <item name="android:textColor">@color/colorOnMinor</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Uikit.Style.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/Uikit.Style.TextAppearance.Button</item>
        <item name="android:textColor">@color/colorOnMajor</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Uikit.Style.Button.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/uikit_corner_radius_medium</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorMinor</item>
        <item name="android:textAppearance">@style/Uikit.Style.TextAppearance.Body2</item>
    </style>

    <!-- Card View-->
    <style name="Uikit.Style.CardView" />

    <style name="Uikit.Style.CardView.All" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Uikit.Style.CardView.Corner</item>
    </style>

    <style name="Uikit.Style.CardView.Top" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Uikit.Style.CardView.Corner.Top</item>
    </style>

    <style name="Uikit.Style.CardView.Corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="Uikit.Style.CardView.Corner.Top">
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Date Picker -->
    <style name="Uikit.Style.DatePicker.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Uikit.Style.DatePicker.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Dialog -->
    <style name="Uikit.Style.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">65%</item>
    </style>

</resources>