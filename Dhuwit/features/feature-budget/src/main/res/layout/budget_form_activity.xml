<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/uikit_margin_padding_size_medium" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/uikit_margin_padding_size_medium" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_close"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_medium"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
        android:gravity="center"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Subtitle1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/uikit_margin_padding_size_medium"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_save"
        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_budget_name"
                style="@style/Uikit.Style.Input.Layout.Outline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
                android:hint="@string/budget_form_hint_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_text_budget_name"
                    style="@style/Uikit.Style.Input.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_large"
                android:text="@string/budget_form_hint_setting"
                android:textAppearance="@style/Uikit.Style.TextAppearance.Subtitle2"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_budget_name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_budget_type"
                style="@style/Uikit.Style.Input.Layout.Outline.DropDown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
                android:enabled="false"
                android:hint="@string/budget_form_hint_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_setting">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/input_text_budget_type"
                    style="@style/Uikit.Style.Input.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_budget_period_date"
                style="@style/Uikit.Style.Input.Layout.Outline.DropDown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
                android:enabled="false"
                android:hint="@string/budget_form_hint_period_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_budget_type">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/input_text_budget_period_date"
                    style="@style/Uikit.Style.Input.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_plan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_large"
                android:text="@string/budget_form_hint_plan"
                android:textAppearance="@style/Uikit.Style.TextAppearance.Subtitle2"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_budget_period_date" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_income"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_plan">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_plan_income_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/budget_form_hint_plan_income_title"
                    android:textAppearance="@style/Uikit.Style.TextAppearance.Body1"
                    app:layout_constraintEnd_toStartOf="@+id/text_plan_income_total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_plan_income_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/budget_form_hint_plan_income_description"
                    android:textAppearance="@style/Uikit.Style.TextAppearance.Caption"
                    app:layout_constraintEnd_toStartOf="@+id/text_plan_income_total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_plan_income_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_plan_income_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/text_plan_income_amount"
                    app:layout_constraintEnd_toStartOf="@+id/image_arrow_income"
                    app:layout_constraintStart_toEndOf="@+id/text_plan_income_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="3 Category" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_plan_income_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_arrow_income"
                    app:layout_constraintStart_toEndOf="@+id/text_plan_income_description"
                    app:layout_constraintTop_toBottomOf="@+id/text_plan_income_total"
                    tools:text="Rp25.000.000"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_arrow_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_right" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
                android:background="@color/colorDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_income" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_expense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_divider">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_plan_expense_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/budget_form_hint_plan_expense_title"
                    android:textAppearance="@style/Uikit.Style.TextAppearance.Body1"
                    app:layout_constraintEnd_toStartOf="@+id/text_plan_expense_total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_plan_expense_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/budget_form_hint_plan_expense_description"
                    android:textAppearance="@style/Uikit.Style.TextAppearance.Caption"
                    app:layout_constraintEnd_toStartOf="@+id/text_plan_expense_total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_plan_expense_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_plan_expense_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/text_plan_expense_amount"
                    app:layout_constraintEnd_toStartOf="@+id/image_arrow_expense"
                    app:layout_constraintStart_toEndOf="@+id/text_plan_expense_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="99 Category" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_plan_expense_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_arrow_expense"
                    app:layout_constraintStart_toEndOf="@+id/text_plan_expense_description"
                    app:layout_constraintTop_toBottomOf="@+id/text_plan_expense_total"
                    tools:text="Rp25.000.000"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_arrow_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_right" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_save"
        style="@style/Uikit.Style.Button.Contained"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/uikit_margin_padding_size_large"
        android:text="@string/general_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start" />

</androidx.constraintlayout.widget.ConstraintLayout>