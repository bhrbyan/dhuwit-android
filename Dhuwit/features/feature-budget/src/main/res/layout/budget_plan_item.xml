<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
        android:layout_marginBottom="@dimen/uikit_margin_padding_size_medium"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_category_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Category Name yang panjaaaaaaaaaaaan qaaaaa masih uramg panmjaga" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_category_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/uikit_margin_padding_size_medium"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_medium"
        android:gravity="end"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_category_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rp99.000.000" />

</androidx.constraintlayout.widget.ConstraintLayout>