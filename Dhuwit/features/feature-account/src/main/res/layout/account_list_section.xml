<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_medium"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
        android:text="@string/account_list_title"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Body1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/uikit_margin_padding_size_medium"
        app:layout_constraintBottom_toBottomOf="@+id/text_title_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_title_account"
        app:srcCompat="@drawable/ic_wallet" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_pager_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
        android:clipToPadding="false"
        android:paddingStart="@dimen/uikit_margin_padding_size_medium"
        android:paddingEnd="@dimen/uikit_margin_padding_size_medium"
        app:layout_constraintTop_toBottomOf="@+id/text_title_account" />

</androidx.constraintlayout.widget.ConstraintLayout>