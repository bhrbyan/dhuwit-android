<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_account"
        style="@style/Uikit.Style.CardView.All"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_xsmall"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/uikit_margin_padding_size_xsmall"
        android:layout_marginBottom="2dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="false"
            android:focusable="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_add"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/uikit_margin_padding_size_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_account" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uikit_margin_padding_size_medium"
                android:layout_marginEnd="@dimen/uikit_margin_padding_size_medium"
                android:text="@string/account_list_add_title"
                android:textAppearance="@style/Uikit.Style.TextAppearance.Subtitle2"
                app:layout_constraintBottom_toTopOf="@+id/text_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_add"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/uikit_margin_padding_size_medium"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_xsmall"
                android:layout_marginEnd="@dimen/uikit_margin_padding_size_medium"
                android:text="@string/account_list_add_description"
                android:textAppearance="@style/Uikit.Style.TextAppearance.Caption"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_add"
                app:layout_constraintTop_toBottomOf="@+id/text_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>