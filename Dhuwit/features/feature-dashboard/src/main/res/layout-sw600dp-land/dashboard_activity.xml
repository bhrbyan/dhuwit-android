<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:title="Dhuwit" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/uikit_margin_padding_size_medium" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/uikit_margin_padding_size_medium" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
        android:text="@string/account_list_title"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Body1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/uikit_margin_padding_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/text_title_account"
        app:layout_constraintEnd_toEndOf="@+id/guideline_mid"
        app:layout_constraintTop_toTopOf="@+id/text_title_account"
        app:srcCompat="@drawable/ic_account_white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_account"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_xsmall"
        android:clipToPadding="false"
        android:paddingStart="@dimen/uikit_margin_padding_size_small"
        android:paddingEnd="@dimen/uikit_margin_padding_size_xxsmall"
        android:paddingBottom="@dimen/uikit_margin_padding_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline_mid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_account" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_medium"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_xsmall"
        android:text="@string/dashboard_menu_transaction"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Body1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline_mid"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/text_title_overview"
        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
        app:layout_constraintTop_toTopOf="@+id/text_title_overview"
        app:srcCompat="@drawable/ic_list" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_overview_income"
        style="@style/Uikit.Style.CardView.All"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_xsmall"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_xsmall"
        android:layout_marginEnd="@dimen/uikit_margin_padding_size_xxsmall"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:layout_constraintEnd_toStartOf="@+id/card_overview_expense"
        app:layout_constraintStart_toStartOf="@+id/guideline_mid"
        app:layout_constraintTop_toBottomOf="@+id/text_title_overview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_overview_income"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="false"
            android:focusable="true"
            android:padding="@dimen/uikit_margin_padding_size_xsmall">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_overview_income_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/dashboard_overview_income_title"
                android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
                app:layout_constraintBottom_toTopOf="@+id/text_overview_income_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_overview_income_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_xxsmall"
                android:maxLines="1"
                android:textAppearance="@style/Uikit.Style.TextAppearance.Subtitle1"
                android:textSize="@dimen/uikit_text_size_large"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/uikit_text_size_large"
                app:autoSizeMinTextSize="@dimen/uikit_text_size_micro"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_overview_income_title"
                tools:text="Rp1.500.000" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_overview_expense"
        style="@style/Uikit.Style.CardView.All"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_xxsmall"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_xsmall"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@+id/card_overview_income"
        app:layout_constraintTop_toBottomOf="@+id/text_title_overview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_overview_expense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="false"
            android:focusable="true"
            android:padding="@dimen/uikit_margin_padding_size_xsmall">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_overview_expense_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/dashboard_overview_expense_title"
                android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
                app:layout_constraintBottom_toTopOf="@+id/text_overview_expense_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_overview_expense_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uikit_margin_padding_size_xxsmall"
                android:maxLines="1"
                android:textAppearance="@style/Uikit.Style.TextAppearance.Subtitle1"
                android:textSize="@dimen/uikit_text_size_large"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/uikit_text_size_large"
                app:autoSizeMinTextSize="@dimen/uikit_text_size_micro"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_overview_expense_title"
                tools:text="Rp1.500.000" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_xsmall"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_large"
        android:text="@string/dashboard_transactions_title"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Body1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline_mid"
        app:layout_constraintTop_toBottomOf="@+id/card_overview_income" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_xsmall"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
        app:layout_constraintBottom_toBottomOf="@+id/image_next"
        app:layout_constraintEnd_toStartOf="@+id/image_previous"
        app:layout_constraintTop_toTopOf="@+id/image_next"
        tools:text="December" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_xsmall"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/uikit_margin_padding_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/text_title_transaction"
        app:layout_constraintEnd_toStartOf="@+id/image_next"
        app:layout_constraintTop_toTopOf="@+id/text_title_transaction"
        app:srcCompat="@drawable/ic_arrow_left" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/uikit_margin_padding_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/text_title_transaction"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toTopOf="@+id/text_title_transaction"
        app:srcCompat="@drawable/ic_arrow_right" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_transaction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/uikit_margin_padding_size_xsmall"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_xsmall"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_mid"
        app:layout_constraintTop_toBottomOf="@+id/image_next" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_empty_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_xxxlarge"
        android:layout_marginBottom="@dimen/uikit_margin_padding_size_xxxlarge"
        android:text="@string/dashboard_transactions_empty"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Caption"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_mid"
        app:layout_constraintTop_toBottomOf="@+id/image_next" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/uikit_margin_padding_size_xxxlarge"
        android:layout_marginBottom="@dimen/uikit_margin_padding_size_xxxlarge"
        android:elevation="8dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/colorMinor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_mid"
        app:layout_constraintTop_toBottomOf="@+id/image_next"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/uikit_margin_padding_size_medium"
        android:layout_marginBottom="@dimen/uikit_margin_padding_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />

</androidx.constraintlayout.widget.ConstraintLayout>