<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMajorDark"
    android:paddingStart="@dimen/uikit_margin_padding_size_medium"
    android:paddingTop="@dimen/uikit_margin_padding_size_medium"
    android:paddingEnd="@dimen/uikit_margin_padding_size_medium"
    android:paddingBottom="@dimen/uikit_margin_padding_size_medium">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_amount"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sunday, 5 September 2020" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Uikit.Style.TextAppearance.Body2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rp999.999.999" />

</androidx.constraintlayout.widget.ConstraintLayout>